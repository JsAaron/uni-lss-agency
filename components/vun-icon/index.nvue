<template>
	<view class="vun-icon-wrap" :class="iconImage" @tap="onClick">
		<text v-if="!iconImage" class="vun-info" :style="(color ? 'color: ' + color + ';' : '') + (size ? 'font-size: ' + size + 'upx;' : '')">{{ Icon[name] || name }}</text>
		<image v-else :src="name" :style="[customStyle]" mode="widthFix" class="vun-icon__image" />
	</view>
</template>

<script>
// #ifdef APP-PLUS
const domModule = weex.requireModule('dom');
// #endif

function isSrc(url) {
  return url.indexOf('http') === 0 || url.indexOf('data:image') === 0 || url.indexOf('//') === 0;
}

import Icon from './type';
export default {
	props: {
		name: {
			type: String,
			default: ''
		},
		customStyle: [Object], // :customStyle="{width: '90upx', height: '90upx'}"
		size: String,
		color: String
	},
	data() {
		return {
			iconImage: '',
			isSrc: false,
			Icon
		};
	},
	beforeCreate() {
		domModule.addRule('fontFace', {
			fontFamily: 'vuniconfont',
			src: "url('https://at.alicdn.com/t/font_1445508_m13wbfzrt6i.ttf')"
		});
	},
	created() {
		this.iconImage = isSrc(this.name) ? 'vun-icon--image' : '';
	},
	methods: {
		onClick(event) {
			this.$emit('click');
		}
	}
};
</script>

<style scoped lang="scss">
@import './index.scss';
</style>
